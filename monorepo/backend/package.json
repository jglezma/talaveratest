{
  "name": "talaveratest-backend",
  "version": "1.0.0",
  "description": "Backend API for TalaveraTest",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "check-db": "ts-node src/scripts/check-db.ts",
    "check-plans": "ts-node src/scripts/check-plans.ts",
    "reset-db": "ts-node src/scripts/reset-db.ts",
    "init-db": "ts-node src/scripts/init-db.ts",
    "setup-db": "npm run reset-db && npm run init-db",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cucumber": "cucumber-js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:setup": "npm run test:db:setup",
    "test:simple": "NODE_ENV=test jest src/tests/simple.test.ts",
    "test:db:setup": "NODE_ENV=test ts-node src/tests/helpers/setup-test-db.ts",
    "test:auth": "NODE_ENV=test jest auth.controller.test.ts",
    "test:projects": "NODE_ENV=test jest projects.controller.test.ts",
    "test:middleware": "NODE_ENV=test jest middleware",
    "test:integration": "NODE_ENV=test jest --testPathPattern='(auth|projects|plans).controller.test.ts'",
    "test:unit": "NODE_ENV=test jest --testPathPattern='middleware.*test.ts'",
    "test:db:create": "psql -U postgres -c 'CREATE DATABASE talaveratest_test;' || echo 'Database may already exist'",
    "test:e2e": "NODE_ENV=test jest --testPathPattern='e2e'",
    "test:security": "NODE_ENV=test jest --testPathPattern='security'",
    "test:performance": "NODE_ENV=test jest --testPathPattern='performance'",
    "test:advanced": "NODE_ENV=test jest --testPathPattern='(security|performance|e2e)'",
    "test:bail": "NODE_ENV=test jest --bail",
    "test:ci": "NODE_ENV=test jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^10.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
